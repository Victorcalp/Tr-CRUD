@model IEnumerable<Treinando_Crud.Models.Department>
@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" class="btn btn-dark">Create</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelObj => obj.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelObj => obj.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@obj.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
