@model Treinando_Crud.Models.ViewsModels.EmployeeFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <form asp-action="Edit" class="form-control">
        <div class="col-md-3">
            <input type="hidden" asp-for="Employee.Id" />
            <div>
                <label class="form-label" asp-for="Employee.Name" ></label>
                <input class="input-group" asp-for="Employee.Name" />
            </div>
            <div>
                <label class="form-label" asp-for="Employee.BirthDate"></label>
                <input class="input-group" asp-for="Employee.BirthDate">
            </div>
            <div>
                <label class="form-label" asp-for="Employee.Email"></label>
                <input class="input-group" asp-for="Employee.Email">
            </div>
            <div>
                <label class="form-label" asp-for="Employee.CPF"></label>
                <input class="input-group" asp-for="Employee.CPF">
            </div>
            <div>
                <label asp-for="Employee.DepartmentId" class="form-label"></label>
                <select asp-for="Employee.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>
            <div>
                <input type="submit" asp-action="Edit" value="Save" class="btn-group btn-dark" />
                <input type="submit" asp-action="Index" value="Cancelar" class="btn-group btn-dark" />
            </div>
        </div>
    </form>
</div>